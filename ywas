<script>
// Click v√†o h·ªôp qu√† ƒë·ªÉ m·ªü
const gift = document.getElementById('giftBox');
const message = document.getElementById('message');

gift.addEventListener('click', () => {
    gift.style.transform = 'scale(1.5) rotate(20deg)';
    gift.style.opacity = 0;
    setTimeout(() => {
        gift.style.display = 'none';
        message.style.display = 'block';
    }, 500);

    // T·∫°o confetti
    for(let i=0;i<50;i++){
        let c = document.createElement('div');
        c.className = 'confetti';
        c.style.backgroundColor = `hsl(${Math.random()*360}, 70%, 60%)`;
        c.style.left = Math.random()*100 + '%';
        c.style.animationDelay = Math.random()*3 + 's';
        document.body.appendChild(c);
    }
});

// Tim bay khi click v√†o m√†n h√¨nh
document.body.addEventListener('click', function(e){
    if(e.target.id !== 'giftBox'){
        let heart = document.createElement('div');
        heart.innerText = 'üíñ';
        heart.style.position = 'absolute';
        heart.style.left = e.clientX + 'px';
        heart.style.top = e.clientY + 'px';
        heart.style.fontSize = '2em';
        heart.style.animation = 'floatHeart 2s forwards';
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 2000);
    }
});

const style = document.createElement('style');
style.innerHTML = `
    @keyframes floatHeart {
        0% { transform: translateY(0); opacity: 1; }
        100% { transform: translateY(-100px); opacity: 0; }
    }
`;
document.head.appendChild(style);
</script>

